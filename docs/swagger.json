                "parameters": [
                    {
                        "name": "body",
                        "required": true,
                        "in": "body",
                        "schema": {
                            "$ref": "#/definitions/CreateUserParam"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "User created successfully",
